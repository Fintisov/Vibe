<!doctype html>
<html lang="en">
<head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description }}">
    <link rel="canonical" href="{{ canonical_url }}">

    <!--- Facebook --->
    <meta property="og:description" content="{{ page_description }}" />
    <meta property="og:image" content="{{ settings.share_image | img_url: '1200x600' }}" />
    <meta property="og:site_name" content="Vybe" />
    <meta property="og:title" content="{{ page_title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ canonical_url }}" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="" />
    <meta name="twitter:description" content="{{ page_description }}" />
    <meta name="twitter:image" content="{{ settings.share_image | img_url: '1200x600' }}" />
    <meta name="twitter:site" content="{{ canonical_url }}" />
    <meta name="twitter:title" content="{{ page_title }}" />

    {%- if request.page_type == 'product' -%}
        <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
        <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
    {%- endif -%}

    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <link rel="dns-prefetch" href="https://cdn.shopify.com" />
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    {%- if settings.favicon != blank -%}
        <link rel="icon" type="image/png" sizes="32x32" href="{{ settings.favicon | img_url: '32x32' }}" />
        <link rel="icon" type="image/png" sizes="57x57" href="{{ settings.favicon | img_url: '57x57' }}" />
        <link rel="icon" type="image/png" sizes="76x76" href="{{ settings.favicon | img_url: '76x76' }}" />
        <link rel="icon" type="image/png" sizes="96x96" href="{{ settings.favicon | img_url: '96x96' }}" />
        <link rel="icon" type="image/png" sizes="128x128" href="{{ settings.favicon | img_url: '128x128' }}" />
        <link rel="icon" type="image/png" sizes="192x192" href="{{ settings.favicon | img_url: '192x192' }}" />

        <link rel="icon" type="image/png" sizes="196x196" href="{{ settings.favicon | img_url: '196x196' }}" />

        <link rel="apple-touch-icon" sizes="120x120" href="{{ settings.favicon | img_url: '120x120' }}" />
        <link rel="apple-touch-icon" sizes="152x152" href="{{ settings.favicon | img_url: '152x152' }}" />
        <link rel="apple-touch-icon" sizes="180x180" href="{{ settings.favicon | img_url: '180x180' }}" />

        <meta name="application-name" content="&nbsp;"/>
        <meta name="msapplication-TileColor" content="#FFFFFF" />
        <meta name="msapplication-TileImage" content="{{ settings.favicon | img_url: '144x144' }}" />
        <meta name="msapplication-square70x70logo" content="{{ settings.favicon | img_url: '70x70' }}" />
        <meta name="msapplication-square150x150logo" content="{{ settings.favicon | img_url: '150x150' }}" />
        <meta name="msapplication-wide310x150logo" content="{{ settings.favicon | img_url: '310x150' }}" />
        <meta name="msapplication-square310x310logo" content="{{ settings.favicon | img_url: '310x310' }}" />
    {%- endif -%}
    <script>
        const url = "https:{{ 'image-load.js' | asset_url }}"
        const content = `importScripts( "${ url }" );`;
        window.workerUrl = URL.createObjectURL( new Blob( [ content ], { type: "text/javascript" } ) );
    </script>
    {{ '_fonts.css' | asset_url | stylesheet_tag }}
    {{ '_init.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }} <!-- Header hook for plugins -->

</head>
<body>

<header class="section-header" id="header">

    <div class="shift-wrapper">

        <div class="pencil-bar">
            {% if settings.pencil_bar_url != empty %}
                <a href="{{ settings.pencil_bar_url }}"><p class="title">{{ settings.pencil_bar_text }}</p></a>
            {% else %}
                <p class="title">{{ settings.pencil_bar_text }}</p>
            {% endif %}
        </div>

        <div class="navigation">

            <div class="header-left desktop-only">
                <button class="mega-nav-trigger eyebrow">SHOP
                    <div class="mega-nav shop">
                        <div class="left">
                            {% for link in linklists.shop-menu.links %}
                                <div class="column">
                                    <p class="col-header caps">{{ link.title }}</p>
                                    {% if link.links != empty %}
                                        {% for child_link in link.links %}
                                            <a href="{{ child_link.url }}" class="text-m">{{ child_link.title }}</a>
                                        {% endfor %}
                                    {% endif %}
                                    <a class="read-more" href="{{ link.url }}">Shop All{% include 'icon-arrow-red' %}</a>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="right">
                            <img class="bg preload-global" aria-hidden="true" data-preload-desktop="https:{{ settings.shop_nav_img | image_url }}" data-preload-mobile="https:{{ settings.shop_nav_img | image_url }}">
                            <div class="content">
                                <p class="header-l">{{ settings.shop_menu_header }}</p>
                                <a href="{{ settings.shop_menu_button_url }}" class="btn caps white">{{ settings.shop_menu_button_text }}</a>
                            </div>
                        </div>
                    </div>
                </button>
                <button class="mega-nav-trigger eyebrow">BRANDS
                    <div class="mega-nav brand">
                        <div class="left">
                            <div class="column">
                                <p class="col-header caps">Popular Brands</p>
                                {% for link in linklists.brands-menu.links %}
                                    {% if link.title contains "|-| " %}
                                        {% continue %}
                                    {% endif %}
                                    <a href="{{ link.url }}" class="text-m">{{ link.title }}</a>
                                {% endfor %}
                                <a class="read-more" href="/collections/all-brands">See All{% include 'icon-arrow-red' %}</a>
                            </div>
                            <div class="brands-grid">
                                {% for link in linklists.brands-menu.links %}
                                    {% if link.title contains "|-|" %}
                                        {% assign collectionArr = link.url | split: "/" %}
                                        {% assign thisCollection = collections[collectionArr.last] %}
                                        {% assign productCount = thisCollection.products | size %}
                                        <a class="brand-logo{% if productCount == 0 %} coming-soon{% endif %}" href="{{ link.url }}">
                                            {% if productCount == 0 %}<span class="coming-soon-text">Coming<br>soon</span>{% endif %}
                                            <img class="image preload-global" data-preload-desktop="https:{{ thisCollection.featured_image | image_url }}" data-preload-mobile="https:{{ thisCollection.featured_image | image_url }}">
                                        </a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>

                        <div class="right">
                            <img class="bg preload-global" aria-hidden="true" data-preload-desktop="https:{{ settings.brand_nav_img | image_url }}" data-preload-mobile="https:{{ settings.brand_nav_img | image_url }}">
                            <div class="content">
                                <p class="header-l">{{ settings.brand_menu_header }}</p>
                                <a href="{{ settings.brand_menu_button_url }}" class="btn caps white">{{ settings.brand_menu_button_text }}</a>
                            </div>
                        </div>
                    </div>
                </button>
                <button class="mega-nav-trigger eyebrow">LEARN
                    <div class="mega-nav learn">
                        <div class="left">
                            <div class="column">
                                <p class="col-header caps">About Us</p>
                                {% comment %}
                                <p class="copy">At Vybe, We inspire people. We help them choose wisely to become who they are for what they will become.</p>
                                {% endcomment %}
                                <a href="/pages/about-us" class="read-more">Read More{% include 'icon-arrow-red' %}</a>
                            </div>
                            <div class="column">
                                <p class="col-header caps">FAQ</p>
                                {% comment %}
                                <p class="copy">At Vybe, We inspire people. We help them choose wisely to become who they are for what they will become.</p>
                                {% endcomment %}
                                <a href="/pages/faqs" class="read-more">Read More{% include 'icon-arrow-red' %}</a>
                            </div>
                            <div class="column">
                                <p class="col-header caps">Blog</p>
                                {% comment %}
                                <p class="copy">At Vybe, We inspire people. We help them choose wisely to become who they are for what they will become.</p>
                                {% endcomment %}
                                <a href="/blogs/beauty-skincare" class="read-more">Read More{% include 'icon-arrow-red' %}</a>
                            </div>
                            <div class="column">
                                <p class="col-header caps">Contact Us</p>
                                {% comment %}
                                <p class="copy">At Vybe, We inspire people. We help them choose wisely to become who they are for what they will become.</p>
                                {% endcomment %}
                                <a href="/pages/contact" class="read-more">Read More{% include 'icon-arrow-red' %}</a>
                            </div>
                        </div>
                        <div class="right">
                            <img class="bg preload-global" aria-hidden="true" data-preload-desktop="https:{{ settings.learn_nav_img | image_url }}" data-preload-mobile="https:{{ settings.learn_nav_img | image_url }}">
                            <div class="content">
                                <p class="header-l">{{ settings.learn_menu_header }}</p>
                                <a href="{{ settings.learn_menu_button_url }}" class="btn caps white">{{ settings.learn_menu_button_text }}</a>
                            </div>
                        </div>

                    </div>
                </button>
            </div>

            <a class="header-center" href="/">{% include "logo" %}</a>

            <div class="header-left-mobile">
                <button class="hammy mega-nav-trigger">{% include 'icon-hamburger' %}
                    <div class="mega-nav-mobile" id="mega-nav-mobile">
                        <div class="top">
                            <a href="/account" class="eyebrow account">{% include "log-in" %}Log In / Sign up</a>
                        </div>
                        <div class="middle content">
                            <div class="nav-tile drawer allow-click">
                                <h6 class="text-m">Shop All{% include "icon-plus" %}</h6>
                                <div class="drawer-items">
                                    <p class="text-m">Health & Fitness{% include "icon-plus" %}</p>
                                    <p class="text-m">Beauty & Skincare{% include "icon-plus" %}</p>
                                    <p class="text-m">Apparel & Accessories{% include "icon-plus" %}</p>
                                    <p class="text-m">Featured{% include "icon-plus" %}</p>
                                </div>
                            </div>
                            <div class="nav-tile drawer allow-click">
                                <h6 class="text-m">All Brands{% include "icon-plus" %}</h6>
                                <div class="drawer-items">
                                    <p class="text-m">Divatrim{% include "icon-plus" %}</p>
                                    <p class="text-m">Truketo{% include "icon-plus" %}</p>
                                    <p class="text-m">One Shot{% include "icon-plus" %}</p>
                                    <p class="text-m">Glocose 1{% include "icon-plus" %}</p>
                                </div>
                            </div>
                            <div class="nav-tile drawer allow-click">
                                <h6 class="text-m">Learn{% include "icon-plus" %}</h6>
                                <div class="drawer-items">
                                    <p class="text-m">About US{% include "icon-plus" %}</p>
                                    <p class="text-m">FAQ{% include "icon-plus" %}</p>
                                    <p class="text-m">Blog{% include "icon-plus" %}</p>
                                    <p class="text-m">Contact US{% include "icon-plus" %}</p>
                                </div>
                            </div>
                        </div>
                        <div class="bottom">
                            <a href="/" class="eyebrow">Accessibility Statement</a>
                            <a href="/" class="eyebrow">Privacy Policy</a>
                            <a href="/" class="eyebrow">Terms & Conditions</a>
                            <a href="/" class="eyebrow">Returns Policy</a>

                        </div>
                    </div>
                </button>

                <a href="/">{% include "logo" %}</a>
            </div>

            <div class="header-right">
                <div class="input-search mega-nav-trigger">
                    {% include 'icon-search' %}
                    <input type="text" name="search" id="search" placeholder="Search">
                </div>
                <a href="/account" class="account">{% include "icon-account" %}</a>
                <button class="mini-cart-trigger" id="mini-cart-trigger">{% include "icon-bag" %}</button>
            </div>

        </div>


    </div>
</header>
<div class="mega-nav-backdrop mobile-nav-backdrop" id="mobile-nav-backdrop"></div>

<main role="main" data-router-wrapper>
    {% if template.name == "index" %}
        {% assign namespace = "home" %}
    {% elsif template.name == "page" %}
        {% assign namespace = page.handle %}
    {% else %}
        {% assign namespace = template.name %}
    {% endif %}
    <div class="view-{{ namespace }}" data-router-view="{{ namespace }}">
        {{ content_for_layout }}
    </div>
</main>
<div id="click-mask"></div>
<div id="global-mask"></div>

{% render 'mini-cart' %}

<footer id="footer">
    <!--div class="pre-footer">
        <div class="c-334">
            {% for link in linklists.pre-footer-columns.links %}
                <div class="col">
                    <h6 class="text-m">{{ link.title }}</h6>
                    {% if link.links != empty %}
                        {% for child_link in link.links %}
                            <a href="{{ child_link.url }}" class="text-m">{{ child_link.title }}</a>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div-->

    <div class="footer-content">
        <div class="c-55">
            <div class="top">
                <div class="left">
                    <div class="col">
                        {% for link in linklists.footer-bold-menu.links %}
                            <a href="{{ link.url }}" class="caps">{{ link.title }}</a>
                        {% endfor %}
                    </div>
                    {% for link in linklists.footer-columns.links %}
                        <div class="col drawer" data-at="767">
                            <h6 class="caps">{{ link.title }}<span class="mobile-only">{% include "icon-plus" %}</span> </h6>
                            <div class="drawer-items">
                            {% if link.links != empty %}
                                {% for child_link in link.links %}
                                    <a href="{{ child_link.url }}" class="copy">{{ child_link.title }}</a>
                                {% endfor %}
                            {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="right socials">
                    <a href="/">{%  include 'icon-instagram' %}</a>
                    <a href="/">{%  include 'icon-twitter' %}</a>
                    <a href="/">{%  include 'icon-facebook' %}</a>
                </div>
            </div>

            <div class="bottom">
                <div class="left">
                    <a class="logo" href="/">{% include "logo" %}</a>
                    <p class="copyright">{{ settings.copyright_text }}</p>
                    <div class="credit-cards">
                        {% include 'icon-visa' %}
                        {% include 'icon-mastercard' %}
                        {% include 'icon-amex' %}
                        {% include 'icon-jcb' %}
                        {% include 'icon-discover' %}
                        {% include 'icon-diners' %}
                        {% include 'icon-union-pay' %}
                    </div>
                </div>

                <div class="right utility-pages">
                    <a href="/pages/terms-and-conditions" class="utility">Accessibility Statement</a>
                    <a href="/pages/privacy-policy" class="utility">PRIVACY POLICY</a>
                    <a href="/pages/terms-conditions" class="utility">TERMS & CONDITIONS</a>
                    <a href="/pages/return-policy" class="utility">RETURN POLICY</a>
                    <div class="credit-cards mobile-only">
                        {% include 'icon-visa' %}
                        {% include 'icon-mastercard' %}
                        {% include 'icon-amex' %}
                        {% include 'icon-jcb' %}
                        {% include 'icon-discover' %}
                        {% include 'icon-diners' %}
                        {% include 'icon-union-pay' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
{{ '_main.css' | asset_url | stylesheet_tag }}
{{ 'main.js' | asset_url | script_tag }}
</body>
</html>
