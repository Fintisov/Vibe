<div class="mini-cart-backdrop" id="mini-cart-backdrop"></div>
<div id="mini-cart">
    <div class="top title-top subheader">
        <div>Your cart <button id="close-trigger" class="nav-close"><span class="sr-only">Close mini cart</span>
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M28 2.82L25.18 0L14 11.18L2.82 0L0 2.82L11.18 14L0 25.18L2.82 28L14 16.82L25.18 28L28 25.18L16.82 14L28 2.82Z" fill="#D9D9D9"/>
                </svg>
            </button>
        </div>
        <p><span id="cart-count"></span> Product(s)</p>
    </div>

    <div class="products-wrapper">

    </div>
    <div class="empty-wrapper subheader">
        <p class="header-m">{{ settings.empty_cart_text }}</p>
    </div>
    <div class="totals">
        <div class="row">
            <p class="row-label">Sub Total</p><p class="row-value" id="mini-cart-subtotal"></p>
        </div>
        <div class="row">
            <p class="row-label">Shipping</p><p class="row-value shipping">Calculated at next step</p>
        </div>
        <div class="total-row">
            <p class="row-label">Total</p><p class="row-value"><span class="currency">USD</span><span id="mini-cart-total"></span></p>
        </div>
        <form action="/cart" method="post">
            <button class="btn black checkout-btn" name="checkout">Checkout</button>
        </form>
    </div>
</div>
