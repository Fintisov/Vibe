<div class="c-60">
    <h3 class="header-l">{{ section.settings.header }}</h3>
    <div class="text">{{ section.settings.subheader }}</div>
    <div class="slider blocks" data-at="767" data-align="start">
        <div class="slides">
            <div class="inner mw">
                {%- for thisProduct in section.settings.collection.products limit: 4 -%}
                    <a href="/products/{{ thisProduct.handle }}" class="block slide">
                        <div class="image-wrapper">
                            <img class="product-image preload"{% if thisProduct.featured_image.alt %} alt="{{ thisProduct.featured_image.alt }}"{% endif %} data-preload-desktop="https:{{ thisProduct.featured_image | image_url }}" data-preload-mobile="https:{{ thisProduct.featured_image | image_url }}">
                        </div>

                        <p class="caps brand">{{ thisProduct.vendor }}</p>
                        <h6 class="title product-name">{{ thisProduct.title }}</h6>
                        {% comment %}<p class="text-m product-info">Beauty • 3 Sizes</p>{% endcomment %}
                        <div class="reviews subtitle">{% include 'icon-reviews-temp' %}(234)</div>
                        <p class="title price">{{ thisProduct.price | money_without_trailing_zeros }}</p>
                    </a>
                {% endfor %}

           {% comment %}
                {% for block in section.blocks %}
                    {% assign thisProduct = block.settings.product %}
                    <a href="/products/{{ thisProduct.handle }}" class="block slide">
                        <div class="image-wrapper">
                            <img class="product-image preload"{% if thisProduct.featured_image.alt %} alt="{{ thisProduct.featured_image.alt }}"{% endif %} data-preload-desktop="https:{{ thisProduct.featured_image | image_url }}" data-preload-mobile="https:{{ thisProduct.featured_image | image_url }}">
                        </div>

                        <p class="caps brand">{{ thisProduct.vendor }}</p>
                        <h6 class="title product-name">{{ thisProduct.title }}</h6>
                        {% comment %}<p class="text-m product-info">Beauty • 3 Sizes</p>{% endcomment %}
                        <div class="reviews subtitle">{% include 'icon-reviews-temp' %}(234)</div>
                        <p class="title price">{{ thisProduct.price | money_without_trailing_zeros }}</p>
                    </a>
                {% endfor %}
                {% endcomment %}
            </div>
        </div>
    </div>

</div>


{% schema %}
{
"name": "Featured collection",
"tag": "section",
"class": "featured-collection",
"settings": [
{
"id": "header",
"type": "text",
"label": "Header"
},
{
"id": "subheader",
"type": "richtext",
"label": "Sub header"
},
    {
        "type": "collection",
        "id": "collection",
        "label": "t:sections.featured-collection.settings.collection.label"
    }
]
}
{% endschema %}
