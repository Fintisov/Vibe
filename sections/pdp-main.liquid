{% if product.metafields.accentuate.square_icon_image and product.metafields.accentuate.square_icon_image != empty %}
    <div class="svg-wrapper c-112 mw">
        <div class="inner">
            {% for group in product.metafields.accentuate.square_icon_image %}
                <div class="group">
                    <img class="preload" data-preload-desktop='{{ group[0].src }}' data-preload-mobile="{{ group[0].src }}">
                    <p>{{ product.metafields.accentuate.iconTitle[forloop.index0] }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}


<div class="faq-section c-50">
    {% if product.metafields.accentuate.drawers_header and product.metafields.accentuate.drawers_header != empty %}
        <div class="top mw">

            <img src="{{ product.metafields.accentuate.drawers_image[0].src }}" alt="{{ product.title }}">
            {% comment %}
            <img class="preload" data-preload-desktop="{{ product.metafields.accentuate.drawers_image[0].src }}" data-preload-mobile="{{ product.metafields.accentuate.drawers_image[0].src }}">
            {% endcomment %}
            <h3>{{ product.metafields.accentuate.drawers_header }}</h3>
            <p class="text-m">{{ product.metafields.accentuate.drawers_intro_text }}</p>
        </div>
    {% endif %}
    {% if product.metafields.accentuate.drawer_header and product.metafields.accentuate.drawer_header != empty %}
    <div class="faq-block">
        {% for drawer in product.metafields.accentuate.drawer_header %}
            <div class="detail-btn drawer allow-click">
                <div class="question">{{ drawer }}<span class="trigger-plus">{% include"plus" %}</span></div>
                <div class="drawer-items answer text-m">
                    {{ product.metafields.accentuate.drawer_rich_text[forloop.index0] }}
                </div>
            </div>
        {% endfor %}
    </div>
    {% endif %}
</div>

{% if product.metafields.accentuate.experts_header and product.metafields.accentuate.experts_header != empty %}
    <div class="fifty-fifty-experts">
        <div class="c-190">
            <div class="left">
                <h4 class="header-m">{{ product.metafields.accentuate.experts_header }}</h4>
                <p class="text-m">{{ product.metafields.accentuate.experts_text }}</p>
                <a href="{{ product.metafields.accentuate.experts_button_link }}" class="btn black caps">{% include 'icon-play' %} {{ product.metafields.accentuate.experts_button_text }}</a>
            </div>
            <div class="right mw">
                {% if product.metafields.accentuate.expert_one_name %}
                    <div class="content">
                        <img class="image preload" data-preload-desktop="{{ product.metafields.accentuate.expert_one_image[0].src }}" data-preload-mobile="{{ product.metafields.accentuate.expert_one_image[0].src }}">
                        <div class="inner-text">
                            <p>{{ product.metafields.accentuate.expert_one_name }}</p>
                            <p>{{ product.metafields.accentuate.expert_one_title }}</p>
                        </div>
                    </div>
                {% endif %}

                {% if product.metafields.accentuate.expert_two_name %}
                    <div class="content">
                        <img class="image preload" data-preload-desktop="{{ product.metafields.accentuate.expert_two_image[0].src }}" data-preload-mobile="{{ product.metafields.accentuate.expert_two_image[0].src }}">
                        <div class="inner-text">
                            <p>{{ product.metafields.accentuate.expert_two_name }}</p>
                            <p>{{ product.metafields.accentuate.expert_two_title }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endif %}




{% schema %}
{
    "name": "PDP Main",
    "class": "pdp-main"
}
{% endschema %}