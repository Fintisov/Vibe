</section>

<section class="product-ingredients">
    <div class="container">
        <div class="product-ingredients__content-wrapper">
            {% assign size = product.metafields.accentuate.text.size | minus: 1 %}
            {% for i in (0..size) %}
                <div class="product-ingredients__content">
                    <div class="product-ingredients__icon">
                        {{ product.metafields.accentuate.svg_icon[i] }}
                    </div>
