<div class="c-50">
        <h2 class="header-l">{{ section.settings.header }}</h2>
    <div class="inner steps mw">
        {% for block in section.blocks %}
            <div class="steps-tile">
                <img class="preload"{% if block.settings.image.alt %} alt="{{ block.settings.image.alt }}"{% endif %} data-preload-desktop="https:{{ block.settings.image | image_url }}" data-preload-mobile="https:{{ block.settings.image | image_url }}">
                <p class="caps">{{ block.settings.eyebrow }}</p>
                <p class="header-m title">{{ block.settings.title }}</p>
                <p class="subtitle tile-copy">{{ block.settings.copy }}</p>
            </div>
        {% endfor %}
    </div>
</div>




{% schema %}
{
"name": "Affiliate Steps",
"tag": "section",
"class": "affiliate-steps",
"settings": [
{
"id": "header",
"type": "text",
"label": "Header"
}
],
"blocks": [
{
"name": "Steps Tiles",
"type": "Tile",
"limit": 3,
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "eyebrow",
"label": "Eyebrow"
},
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "text",
"id": "copy",
"label": "Copy"
}
]
}
]
}
{% endschema %}