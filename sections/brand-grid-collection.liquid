                    </div>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="top-inner">
                <div class="sorts drawer">
                    <p class="caps">Sort by: best sellers {% include "icon-arrow-down" %}</p>
                    <div class="drawer-items">
                        <p class="caps">Option 1</p>
                        <p class="caps">Option 1</p>
                        <p class="caps">Option 1</p>
                    </div>
                </div>
            </div>

            <div class="brand-grid">
                {%- for block in section.blocks -%}
                    {%- case block.type -%}
                    {%- when 'collection_grid' -%}
                        {% assign thisCollection = block.settings.collection %}
                        <a class="brand-logo" href="/collections/{{ thisCollection.handle }}" title="{{ thisCollection.title }}">
                            <img class="image" src="{{ thisCollection.image | image_url }}">
                            {% if thisCollection.metafields.accentuate.collection_category %}
                                <span class="caps category">{{ thisCollection.metafields.accentuate.collection_category }}</span>
                            {% endif %}
                        </a>
                    {% endcase %}
                {% endfor %}
                <a class="brand-logo">
                    <div class="filler"></div>
                </a>
                <a class="brand-logo">
                    <div class="filler"></div>
                </a>
            </div>
        </div>
    </div>
</div>





{% schema %}
{
    "name": "Brand Grid Collection",
    "tag": "section",
    "class": "brand-grid-collection",
    "blocks": [
        {
            "name": "Collections grid",
            "type": "collection_grid",
            "settings": [
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                }
            ]
        }
    ]
}
{% endschema %}
